!!!
%html
  %head
    %title FeedxApp
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}

  %body
    
    %nav.navbar.navbar-default{role: "navigation"}
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "/"} 
          .feedx_symbol
            Feedx
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          - if user_signed_in?
            %li.active
              = link_to 'My Feeds', my_feeds_path
            %li
              = link_to 'My Bookmarks', my_bookmarks_path
            %li
              = link_to 'Fellow Readers', users_path  
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                I would like to...
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Add a Feed', new_feed_path
                %li
                  = link_to 'Find a Feed', find_feed_path
                / %li
                /   %a{href: "#"} Something else here
                / %li.divider
                / %li
                /   %a{href: "#"} Separated link
                / %li.divider
                / %li
                /   %a{href: "#"} One more separated link
        / %form.navbar-form.navbar-left{role: "search"}
        /   .form-group
        /     - if user_signed_in?
        /       %input.form-control{placeholder: "Search", type: "text"}/
        /       %button.btn.btn-default{type: "submit"} Submit
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in? == false
            %li
              = link_to "Sign Up", new_user_registration_path
            %li
              = link_to "Sign In", new_user_session_path
            %li
              = link_to "Sign In with Google", user_omniauth_authorize_path(:google_oauth2)
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown"}
                Logged in as
                = current_user.email
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "My Profile", user_path(current_user)
                %li
                  = link_to "Settings", edit_user_registration_path
                %li.divider
                %li
                  = link_to "Sign Out", destroy_user_session_path, method: :delete

    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_ #{name}"
    .container
      %nav.nav-bar.col-md-12

          
        
      .main-view.col-md-12
        = yield
      %footer.footer.col-md-12
        .codeship.img-responsive.col-md-1
          = image_tag "https://www.codeship.io/projects/0104e5b0-352d-0131-c05b-2ef0a96c4b03/status"
        .bottom-nav.col-md-11
          = link_to 'About', page_path('about')
          


